{
    "name": "THU-Hole Reloader",
    "description": "Auto reload when thu-hollow failed to fetch",
    "version": "2.0.0",
    "manifest_version": 3,
    "permissions": ["storage"],
    "background": {
        "service_worker": "./js/background.js"
    },
    "action": {
        "default_title": "自动重新加载树洞",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/logo32.png",
            "32": "/images/logo32.png",
            "48": "/images/logo48.png",
            "128": "/images/logo128.png"
        }
    },
    "icons": {
        "16": "/images/logo32.png",
        "32": "/images/logo32.png",
        "48": "/images/logo48.png",
        "128": "/images/logo128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://thuhollow.github.io/?"],
            "js": ["./js/content_script.js"],
            "run_at": "document_idle"
        }
    ]
}